<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - LapCart</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        :root {
            --sidebar-width: 240px;
            --primary-color: #8257ED;
            --dark-bg: #1a1a2e;
            --darker-bg: #101022;
            --lighter-bg: #2a2a3e;
            --text-color: #ffffff;
            --border-color: #3a3a4e;
            --success-color: #00bf8e;
            --warning-color: #f7c94b;
            --danger-color: #f75842;
        }

        html, body {
            height: 100%;
            overflow-y: auto;
            background-color: var(--dark-bg);
            color: var(--text-color);
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .lapcart-dashboard-main {
            flex: 1;
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            min-height: 100vh;
            overflow-y: auto;
            position: relative;
        }

        .lapcart-dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background-color: var(--darker-bg);
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .lapcart-dashboard-content {
            padding: 30px;
            overflow-y: auto;
        }

        .lapcart-dashboard-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .lapcart-stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .lapcart-stat-card {
            background-color: var(--lighter-bg);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            border: 1px solid var(--border-color);
        }

        .lapcart-stat-title {
            font-size: 18px;
            font-weight: 600;
            color: #aaa;
            margin-bottom: 10px;
        }

        .lapcart-stat-value {
            font-size: 24px;
            font-weight: bold;
        }

        .lapcart-charts-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .lapcart-chart-card {
            background-color: var(--lighter-bg);
            padding: 20px;
            border-radius: 10px;
            border: 1px solid var(--border-color);
            margin-bottom: 20px;
        }

        .lapcart-chart-title {
            font-size: 18px;
            font-weight: 600;
            color: #aaa;
            margin-bottom: 15px;
        }

        .lapcart-chart-canvas {
            position: relative;
            height: 300px;
            width: 100%;
        }

        .lapcart-chart-card.full-width {
            grid-column: 1 / -1;
        }

        .lapcart-dashboard-footer {
            background-color: var(--darker-bg);
            padding: 15px;
            text-align: center;
            border-top: 1px solid var(--border-color);
        }

        .chart-fallback {
            text-align: center;
            color: #aaa;
            font-size: 16px;
            padding: 20px;
        }

        .lapcart-filter-form {
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
        }

        @media (max-width: 1200px) {
            .lapcart-charts-container {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 992px) {
            .lapcart-dashboard-main {
                margin-left: 0;
                width: 100%;
            }

            .lapcart-stats-container {
                grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .lapcart-dashboard-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .lapcart-dashboard-content {
                padding: 15px;
            }

            .lapcart-filter-form {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <!-- Header Partial -->
    <%- include("../../views/partials/admin/header") %>

    <!-- Main Content -->
    <div class="lapcart-dashboard-main">
        <div class="lapcart-dashboard-header">
            <h2 class="text-xl font-semibold">Dashboard Overview</h2>
            <form class="lapcart-filter-form" action="/admin/dashboard" method="GET">
                <select name="dateRange" class="form-select form-select-sm" style="width: 150px;" id="dateRangeFilter">
                    <option value="daily" <%= dateRange === 'daily' ? 'selected' : '' %>>Daily</option>
                    <option value="weekly" <%= dateRange === 'weekly' ? 'selected' : '' %>>Weekly</option>
                    <option value="monthly" <%= dateRange === 'monthly' ? 'selected' : '' %>>Monthly</option>
                    <option value="yearly" <%= dateRange === 'yearly' ? 'selected' : '' %>>Yearly</option>
                 </select>
               
                <button type="submit" class="btn btn-primary btn-sm">Filter</button>
            </form>
        </div>

        <div class="lapcart-dashboard-content">
            <h1 class="lapcart-dashboard-title">Dashboard</h1>

            <!-- Stats Cards -->
            <div class="lapcart-stats-container">
                <div class="lapcart-stat-card">
                    <h2 class="lapcart-stat-title">All Over Sales</h2>
                    <p class="lapcart-stat-value text-danger">
                        <%= typeof dashboardData.stats.allOverSales !== 'undefined' ? dashboardData.stats.allOverSales.toLocaleString() : '0' %> Units
                    </p>
                </div>
                <div class="lapcart-stat-card">
                    <h2 class="lapcart-stat-title">Total Revenue</h2>
                    <p class="lapcart-stat-value text-success">
                        ₹<%= typeof dashboardData.stats.totalRevenue !== 'undefined' ? dashboardData.stats.totalRevenue.toLocaleString('en-IN') : '0' %>
                    </p>
                </div>
                <div class="lapcart-stat-card">
                    <h2 class="lapcart-stat-title">Total Orders</h2>
                    <p class="lapcart-stat-value text-primary">
                        <%= typeof dashboardData.stats.totalOrders !== 'undefined' ? dashboardData.stats.totalOrders.toLocaleString() : '0' %>
                    </p>
                </div>
                <div class="lapcart-stat-card">
                    <h2 class="lapcart-stat-title">Total Products</h2>
                    <p class="lapcart-stat-value text-purple-400">
                        <%= typeof dashboardData.stats.totalProducts !== 'undefined' ? dashboardData.stats.totalProducts.toLocaleString() : '0' %>
                    </p>
                </div>
                <div class="lapcart-stat-card">
                    <h2 class="lapcart-stat-title">Net Sales</h2>
                    <p class="lapcart-stat-value text-warning">
                        ₹<%= typeof dashboardData.stats.netSales !== 'undefined' ? dashboardData.stats.netSales.toLocaleString('en-IN') : '0' %>
                    </p>
                </div>
            </div>

            <!-- Charts Section -->
            <!-- Net Sales Chart (Full Width) -->
            <div class="lapcart-chart-card full-width">
                <h2 class="lapcart-chart-title">Net Sales (<%= dateRange.charAt(0).toUpperCase() + dateRange.slice(1) %>)</h2>
                <div class="lapcart-chart-canvas">
                    <% if (!dashboardData.charts.netSales.data || dashboardData.charts.netSales.data.length === 0 || dashboardData.charts.netSales.data.every(val => val === 0)) { %>
                        <p class="chart-fallback">No Net Sales data available for <%= dateRange %></p>
                    <% } else { %>
                        <canvas id="netSalesChart"></canvas>
                    <% } %>
                </div>
            </div>

            <div class="lapcart-charts-container">
                <!-- Best Selling Products -->
                <div class="lapcart-chart-card">
                    <h2 class="lapcart-chart-title">Top 10 Best Selling Products</h2>
                    <div class="lapcart-chart-canvas">
                        <% if (!dashboardData.charts.bestProducts.data || dashboardData.charts.bestProducts.data.length === 0) { %>
                            <p class="chart-fallback">No product sales data available</p>
                        <% } else { %>
                            <canvas id="bestProductsChart"></canvas>
                        <% } %>
                    </div>
                </div>
                <!-- Best Selling Categories -->
                <div class="lapcart-chart-card">
                    <h2 class="lapcart-chart-title">Top 10 Best Selling Categories</h2>
                    <div class="lapcart-chart-canvas">
                        <% if (!dashboardData.charts.bestCategories.data || dashboardData.charts.bestCategories.data.length === 0) { %>
                            <p class="chart-fallback">No category sales data available</p>
                        <% } else { %>
                            <canvas id="bestCategoriesChart"></canvas>
                        <% } %>
                    </div>
                </div>
                <!-- Best Selling Brands -->
                <div class="lapcart-chart-card">
                    <h2 class="lapcart-chart-title">Top 10 Best Selling Brands</h2>
                    <div class="lapcart-chart-canvas">
                        <% if (!dashboardData.charts.bestBrands.data || dashboardData.charts.bestBrands.data.length === 0) { %>
                            <p class="chart-fallback">No brand sales data available</p>
                        <% } else { %>
                            <canvas id="bestBrandsChart"></canvas>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="lapcart-dashboard-footer">
            <p>© 2025 LapCart. All rights reserved.</p>
        </div>
    </div>

    <!-- Chart.js Initialization with Dynamic Data -->
    <script>
        // Net Sales Chart (Line Chart)
        <% if (dashboardData.charts.netSales.data && dashboardData.charts.netSales.data.some(val => val !== 0)) { %>
        new Chart(document.getElementById('netSalesChart'), {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(dashboardData.charts.netSales.labels || []) %>,
                datasets: [{
                    label: 'Net Sales',
                    data: <%- JSON.stringify(dashboardData.charts.netSales.data) %>,
                    borderColor: 'rgba(255, 206, 86, 1)',
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Net Sales (₹)', color: '#fff' },
                        ticks: {
                            color: '#fff',
                            callback: function(value) {
                                return '₹' + (value / 100000).toFixed(1) + 'L';
                            }
                        }
                    },
                    x: {
                        title: { display: true, text: '<%= dateRange.charAt(0).toUpperCase() + dateRange.slice(1) %> Period', color: '#fff' },
                        ticks: { color: '#fff' }
                    }
                },
                plugins: {
                    legend: { labels: { color: '#fff' } },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += new Intl.NumberFormat('en-IN', {
                                        style: 'currency',
                                        currency: 'INR',
                                        maximumFractionDigits: 0
                                    }).format(context.parsed.y);
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });
        <% } %>

        // Best Selling Products Chart (Bar)
        <% if (dashboardData.charts.bestProducts.data && dashboardData.charts.bestProducts.data.length > 0) { %>
        new Chart(document.getElementById('bestProductsChart'), {
            type: 'bar',
            data: {
                labels: <%- JSON.stringify(dashboardData.charts.bestProducts.labels) %>,
                datasets: [{
                    label: 'Units Sold',
                    data: <%- JSON.stringify(dashboardData.charts.bestProducts.data) %>,
                    backgroundColor: '<%= dashboardData.charts.bestProducts.backgroundColor %>',
                    borderColor: '<%= dashboardData.charts.bestProducts.borderColor %>',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Units Sold', color: '#fff' },
                        ticks: { color: '#fff' }
                    },
                    x: {
                        title: { display: true, text: 'Products', color: '#fff' },
                        ticks: { color: '#fff' }
                    }
                },
                plugins: { legend: { display: false } }
            }
        });
        <% } %>

        // Best Selling Categories Chart (Pie)
        <% if (dashboardData.charts.bestCategories.data && dashboardData.charts.bestCategories.data.length > 0) { %>
        new Chart(document.getElementById('bestCategoriesChart'), {
            type: 'pie',
            data: {
                labels: <%- JSON.stringify(dashboardData.charts.bestCategories.labels) %>,
                datasets: [{
                    data: <%- JSON.stringify(dashboardData.charts.bestCategories.data) %>,
                    backgroundColor: <%- JSON.stringify(dashboardData.charts.bestCategories.backgroundColor) %>,
                    borderColor: '#fff',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'right', labels: { color: '#fff' } } }
            }
        });
        <% } %>

        // Best Selling Brands Chart (Doughnut)
        <% if (dashboardData.charts.bestBrands.data && dashboardData.charts.bestBrands.data.length > 0) { %>
        new Chart(document.getElementById('bestBrandsChart'), {
            type: 'doughnut',
            data: {
                labels: <%- JSON.stringify(dashboardData.charts.bestBrands.labels) %>,
                datasets: [{
                    data: <%- JSON.stringify(dashboardData.charts.bestBrands.data) %>,
                    backgroundColor: <%- JSON.stringify(dashboardData.charts.bestBrands.backgroundColor) %>,
                    borderColor: '#fff',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'right', labels: { color: '#fff' } } }
            }
        });
        <% } %>

        // Filter Change Handler
        document.getElementById('dateRangeFilter').addEventListener('change', function() {
            const isCustom = this.value === 'custom';
            document.querySelector('input[name="startDate"]').disabled = !isCustom;
            document.querySelector('input[name="endDate"]').disabled = !isCustom;
        });
    </script>
</body>
</html>