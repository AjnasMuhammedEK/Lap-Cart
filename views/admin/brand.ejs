        :root {
            --sidebar-width: 240px;
            --primary-color: #8257ED;
            --dark-bg: #1a1a2e;
            --darker-bg: #101022;
            --lighter-bg: #2a2a3e;
            --text-color: #ffffff;
            --border-color: #3a3a4e;
            --success-color: #00bf8e;
            --warning-color: #f7c94b;
            --danger-color: #f75842;
