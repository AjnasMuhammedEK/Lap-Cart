<%- include("../../views/partials/user/header") %>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
  }

  body {
    background: #f5f7fa;
    color: #333;
    line-height: 1.6;
  }

  .wishlist-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .wishlist-header {
    background: linear-gradient(135deg, #6e8efb, #a777e3);
    padding: 40px 20px;
    text-align: center;
    border-radius: 15px;
    margin-bottom: 40px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .wishlist-header h1 {
    color: #fff;
    font-size: 2.5rem;
    font-weight: 600;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .wishlist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
  }

  .wishlist-item {
    background: #fff;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .wishlist-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .wishlist-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .wishlist-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .wishlist-item:hover .wishlist-image img {
    transform: scale(1.05);
  }

  .wishlist-content {
    padding: 20px;
  }

  .wishlist-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 10px;
    height: 3rem;
    overflow: hidden;
  }

  .wishlist-desc {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 15px;
    height: 4rem;
    overflow: hidden;
  }

  .price-container {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
  }

  .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 0.9rem;
  }

  .sale-price {
    color: #e74c3c;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .wishlist-actions {
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }

  .action-btn {
    flex: 1;
    padding: 10px;
    border: none;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .add-to-cart-btn {
    background: #3498db;
    color: #fff;
  }

  .remove-btn {
    background: #e74c3c;
    color: #fff;
  }

  .action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }

  .add-to-cart-btn:hover {
    background: #2980b9;
  }

  .remove-btn:hover {
    background: #c0392b;
  }

  .empty-wishlist {
    text-align: center;
    padding: 60px 20px;
    background: #fff;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    margin: 0 auto;
    max-width: 500px;
  }

  .empty-wishlist h2 {
    color: #666;
    font-size: 1.8rem;
    margin-bottom: 20px;
  }

  .empty-wishlist a {
    display: inline-block;
    padding: 12px 30px;
    background: #3498db;
    color: #fff;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 500;
    transition: background 0.3s ease;
  }

  .empty-wishlist a:hover {
    background: #2980b9;
  }
</style>

<body>
  <div class="wishlist-container">
    <div class="wishlist-header">
      <h1>My Wishlist</h1>
    </div>

    <% if (data && data.products.length > 0) { %>
      <div class="wishlist-grid">
        <% data.products.forEach((item) => { %>
          <div class="wishlist-item">
            <div class="wishlist-image">
              <img src="/uploads/product-images/<%= item.productId.productImage[0] %>" 
                   alt="<%= item.productId.productName %>" style="width: 50%; height: 90%; margin-left: 75px;">
            </div>
            <div class="wishlist-content">
              <h3 class="wishlist-title"><%= item.productId.productName %></h3>
              <p class="wishlist-desc"><%= item.productId.description %></p>
              <div class="price-container">
                <span class="original-price">₹<%= item.productId.regularPrice  %></span>
                <span class="sale-price">₹<%= item.productId.salePrice %></span>
              </div>
              <div class="wishlist-actions">
                <button class="action-btn add-to-cart-btn" 
                        data-product-id="<%= item.productId._id %>">
                  Add to Cart
                </button>
                <button class="action-btn remove-btn" 
                        data-product-id="<%= item.productId._id %>">
                  Remove
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-wishlist">
        <h2>Your wishlist is empty</h2>
        <a href="/shop">Continue Shopping</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.add-to-cart-btn').click(function() {
        const productId = $(this).data('product-id');
        const button = $(this);

        button.prop('disabled', true).text('Adding...');

        $.ajax({
          url: '/addToCartFromWishlist',
          method: 'POST',
          data: { productId },
          success: function(response) {
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: response.message,
              confirmButtonColor: '#3498db'
            }).then(() => {
              window.location.href = response.redirect;
            });
          },
          error: function(err) {
            button.prop('disabled', false).text('Add to Cart');
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: err.responseJSON.message,
              confirmButtonColor: '#e74c3c'
            });
          }
        });
      });

      $('.remove-btn').click(function() {
        const productId = $(this).data('product-id');
        const button = $(this);

        button.prop('disabled', true).text('Removing...');

        $.ajax({
          url: '/removeWishlist',
          method: 'POST',
          data: { productId },
          success: function(response) {
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: response.message,
              confirmButtonColor: '#3498db'
            }).then(() => {
              location.reload();
            });
          },
          error: function(err) {
            button.prop('disabled', false).text('Remove');
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: err.responseJSON.message,
              confirmButtonColor: '#e74c3c'
            });
          }
        });
      });
    });
  </script>
</body>
</html>