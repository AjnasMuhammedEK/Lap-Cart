    <script src="/js/scrollax.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    $(document).ready(function(){
        var quantitiy = 0;
        $('.quantity-right-plus').click(function(e){
            e.preventDefault();
            var quantity = parseInt($('#quantity').val());
            var max = parseInt($('#quantity').attr('max'));
            if(quantity < max){
                $('#quantity').val(quantity + 1);
            }
        });

        $('.quantity-left-minus').click(function(e){
            e.preventDefault();
            var quantity = parseInt($('#quantity').val());
            if(quantity > 1){
                $('#quantity').val(quantity - 1);
            }
        });

        $('.product-slider').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            items: 1,
            dots: true
        });

        $('.image-popup').magnificPopup({
            type: 'image',
            closeOnContentClick: true,
            mainClass: 'mfp-img-mobile',
            image: {
                verticalFit: true
            },
            zoom: {
                enabled: true,
                duration: 300,
                opener: function(element) {
                    return element.find('img');
                }
            }
        });

         function initializeZoom(container) {
            const img = container.querySelector('.zoom-image');
            const lens = container.querySelector('.zoom-lens');

            if (!img || !lens) return; 
            img.addEventListener('load', () => {
                const rect = container.getBoundingClientRect();
                const zoomFactor = 2.5;

                container.addEventListener('mousemove', (e) => {
                    const rect = container.getBoundingClientRect();
                    let posX = e.clientX - rect.left;
                    let posY = e.clientY - rect.top;

                    const lensWidth = lens.offsetWidth;
                    const lensHeight = lens.offsetHeight;
                    posX = Math.max(lensWidth / 2, Math.min(posX, rect.width - lensWidth / 2));
                    posY = Math.max(lensHeight / 2, Math.min(posY, rect.height - lensHeight / 2));

                    lens.style.left = `${posX - lensWidth / 2}px`;
                    lens.style.top = `${posY - lensHeight / 2}px`;

                    lens.style.backgroundImage = `url(${img.src})`;
                    lens.style.backgroundSize = `${img.width * zoomFactor}px ${img.height * zoomFactor}px`;
                    lens.style.backgroundPosition = `-${(posX * zoomFactor) - (lensWidth / 2)}px -${(posY * zoomFactor) - (lensHeight / 2)}px`;

                    lens.style.opacity = '1';
                });

                container.addEventListener('mouseleave', () => {
                    lens.style.opacity = '0';
                });
            });

             if (img.complete) {
                img.dispatchEvent(new Event('load'));
            }
        }

         document.querySelectorAll('.zoom-container').forEach(initializeZoom);

         $('.product-slider').on('changed.owl.carousel', function() {
            document.querySelectorAll('.zoom-container').forEach(initializeZoom);
        });

        $('#add-to-cart').click(function() {
            if ($(this).hasClass('disabled-btn')) return;

            const productId = $(this).data('product-id');
            const quantity = parseInt($('#quantity').val());
            const finalPrice = '<%= finalPrice %>';
            const button = $(this);

            button.addClass('loading').text('Adding...');

            $.ajax({
                url: '/cartAdd',
                method: 'POST',
                data: { productId, quantity, finalPrice },
                success: function(response) {
                    button.removeClass('loading').text('Add to Cart');
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                        confirmButtonColor: '#3085d6'
                    }).then(() => {
                        window.location.href = response.redirect;
                    });
                },
                error: function(err) {
                    button.removeClass('loading').text('Add to Cart');
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: err.responseJSON.message,
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        });

       
    });

    
function addToWhishlist(proId){
    console.log(proId);
    $.ajax({
        url:'/addWhishlist',
        method:'get',
        data:{productId:proId},
        success:function(response){
            if(response.success){
                Swal.fire({
                    icon:'success',
                    text:response.message
                })
            }else{
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message || 'An unexpected error occurred'
                });
            }
        }
    })
}
    </script>
  </body>
</html>