					$('#quantity').val(quantity + 1);

				
				
			});

			$('.quantity-left-minus').click(function(e){
				e.preventDefault();
				var quantity = parseInt($('#quantity').val());
				
					if(quantity>0){
					$('#quantity').val(quantity - 1);
					}
			});
			
		});

		$(document).ready(function(){
			$('.product-slider').owlCarousel({
				loop: true,
				margin: 10,
				nav: true,
				items: 1,
				dots: true
			});

			$('.zoom-image').magnificPopup({
				type: 'image',
				closeOnContentClick: true,
				mainClass: 'mfp-img-mobile',
				image: {
					verticalFit: true
				},
				zoom: {
					enabled: true,
					duration: 300,
					opener: function(element) {
						return element.find('img');
					}
				}
			});
		});

    document.querySelectorAll('.zoom-container').forEach(container => {
      const img = container.querySelector('.zoom-image img');
      const lens = container.querySelector('.zoom-lens');

      container.addEventListener('mousemove', (e) => {
        const rect = container.getBoundingClientRect();
        const posX = e.clientX - rect.left;
        const posY = e.clientY - rect.top;

        const lensX = posX - (lens.offsetWidth / 2);
        const lensY = posY - (lens.offsetHeight / 2);
        
        const boundedX = Math.max(0, Math.min(lensX, img.width - lens.offsetWidth));
        const boundedY = Math.max(0, Math.min(lensY, img.height - lens.offsetHeight));
        
        lens.style.left = `${boundedX}px`;
        lens.style.top = `${boundedY}px`;

        const zoomedImgUrl = img.src;
        lens.style.backgroundImage = `url(${zoomedImgUrl})`;
        lens.style.backgroundSize = `${img.width * 2}px ${img.height * 2}px`;
        lens.style.backgroundPosition = `-${posX * 2}px -${posY * 2}px`;
      });

      container.addEventListener('mouseleave', () => {
        lens.style.display = 'none';
      });

      container.addEventListener('mouseenter', () => {
        lens.style.display = 'block';
      });
    });
	</script>
