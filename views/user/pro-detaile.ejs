    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="/css/animate.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/magnific-popup.css">
    <link rel="stylesheet" href="/css/aos.css">
    <link rel="stylesheet" href="/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="/css/jquery.timepicker.css">
    <link rel="stylesheet" href="/css/flaticon.css">
    <link rel="stylesheet" href="/css/icomoon.css">
    <link rel="stylesheet" href="/css/style.css">

    <style>
      .zoom-container {
          position: relative;
          overflow: hidden;
          width: 100%;
          height: 400px; /* Matches your original height */
      }

      .zoom-container img {
          width: 100%;
          height: 100%;
          object-fit: contain;
          display: block;
      }

      .zoom-lens {
          position: absolute;
          width: 120px; /* Slightly larger for better visibility */
          height: 120px;
          border: 2px solid #fff; /* Clear white border */
          border-radius: 50%; /* Circular lens */
          background: rgba(0, 0, 0, 0.2); /* Subtle dark overlay */
          opacity: 0; /* Hidden by default */
          pointer-events: none; /* Allows mouse events to pass through */
          transition: opacity 0.2s ease; /* Smooth fade */
          z-index: 100; /* Above carousel elements */
      }

      .zoom-container:hover .zoom-lens {
          opacity: 1; /* Visible on hover */
      }

      .add-to-cart-container {
          margin-top: 20px;
          padding: 10px 0;
          clear: both;  
          display: block !important; 
          position: relative; 
          z-index: 100;  
      }

      button.add-to-cart {
          display: inline-block !important;
          visibility: visible !important;  
          opacity: 1 !important;  
          background-color: #000000 !important;
          color: #ffffff !important;
          padding: 12px 24px !important;
          border: none !important;
          border-radius: 5px !important;
          font-size: 16px !important;
          font-weight: 600 !important;
          cursor: pointer !important;
          text-align: center !important;
          min-width: 150px !important;
          transition: background-color 0.3s ease !important;
          box-shadow: 0 2px 5px rgba(0,0,0,0.2) !important;
          position: relative !important;  
          z-index: 10 !important;  
      }

      button.add-to-cart:hover {
          background-color: #333333 !important;
      }

      button.add-to-cart.loading {
          opacity: 0.6 !important;
          cursor: not-allowed !important;
      }

      button.add-to-cart.disabled-btn {
          background-color: #cccccc !important;
          cursor: not-allowed !important;
          pointer-events: none !important;
      }

      .product-details button.add-to-cart,
      .product-details:hover button.add-to-cart,
      *:hover button.add-to-cart {
          display: inline-block !important;
          visibility: visible !important;
          opacity: 1 !important;
      }
      
      .btn-primary, .btn-black, .add-to-cart {
          display: inline-block !important;
          visibility: visible !important;
          opacity: 1 !important;
      }
    </style>
  </head>
  <body class="goto-here">
    <%- include("../partials/user/header.ejs") %>

    <div class="hero-wrap hero-bread" style="background-image: url('/images/banner_shop.webp');">
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span>Shop</span></p>
            <h1 class="mb-0 bread">Shop</h1>
          </div>
        </div>
      </div>
    </div>

    <div class="page-header breadcrumb-wrap">
      <div class="container">
          <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                  <li class="breadcrumb-item active" aria-current="page"><%= product.productName %></li>
              </ol>
          </nav>
      </div>
  </div>

    <section class="ftco-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5 ftco-animate">
            <div class="owl-carousel owl-theme product-slider">
              <% for(let i = 0; i < 3 && i < product.productImage.length; i++) { %>
                <div class="item">
                  <div class="zoom-container">
                    <a href="/uploads/product-images/<%=product.productImage[i]%>" class="image-popup">
                      <img src="/uploads/product-images/<%=product.productImage[i]%>" 
                           class="img-fluid zoom-image" 
                           alt="product image">
                    </a>
                    <div class="zoom-lens"></div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col-lg-6 product-details pl-md-5 ftco-animate">
            <h3><%=product.productName%></h3>
            <h4><%=product.description%></h4>
            <div class="rating d-flex">
              <p class="text-left mr-4">
                <a href="#" class="mr-2">5.0</a>
                <a href="#"><span class="ion-ios-star-outline"></span></a>
                <a href="#"><span class="ion-ios-star-outline"></span></a>
                <a href="#"><span class="ion-ios-star-outline"></span></a>
                <a href="#"><span class="ion-ios-star-outline"></span></a>
                <a href="#"><span class="ion-ios-star-outline"></span></a>
              </p>
              <p class="text-left mr-4">
                <a href="#" class="mr-2" style="color: #000;">100 <span style="color: #bbb;">Rating</span></a>
              </p>
              <p class="text-left">
                <a href="#" class="mr-2" style="color: #000;">500 <span style="color: #bbb;">Sold</span></a>
              </p>
            </div>
            <p class="price">
              <span style="text-decoration: line-through; color: gray; margin-right: 10px;">
                ₹<%= product.regularPrice %>
              </span>
              <span style="font-weight: bold; color: rgb(0, 0, 0);">
                ₹<%= product.salePrice %>
              </span>
            </p>
            <p>You are saved ₹<%=product.regularPrice - product.salePrice %></p>
            <div class="row mt-4">
              <div class="col-md-12">
                <% if(product.quantity <= 0) { %>
                  <p style="color: #ff0404;">OUT OF STOCK</p>
                <% } else { %>
                  <p style="color: #000;">Stock: <%=product.quantity%></p>
                <% } %>
                <p>Processor: <%=product.processor%></p>
                <p>RAM: <%=product.ram%></p>
                <p>Storage: <%=product.storage%></p>
                <p>Graphics Card: <%=product.graphicsCard%></p>
              </div>
            </div>
            <div class="w-100"></div>
            <div class="input-group col-md-6 d-flex mb-3">
              <span class="input-group-btn mr-2">
                <button type="button" class="quantity-left-minus btn" data-type="minus" data-field="">
                  <i class="ion-ios-remove"></i>
                </button>
              </span>
              <input type="text" id="quantity" name="quantity" class="quantity form-control input-number" 
                     value="1" min="1" max="<%= product.quantity %>" 
                     <%= product.quantity <= 0 ? 'disabled' : '' %>>
              <span class="input-group-btn ml-2">
                <button type="button" class="quantity-right-plus btn" data-type="plus" data-field="">
                  <i class="ion-ios-add"></i>
                </button>
              </span>
            </div>
            <div class="add-to-cart-container" style="z-index: 1000;">
              <% if(product.quantity > 0) { %>
                <button type="button" id="add-to-cart" data-product-id="<%= product._id %>" style="display: inline-block !important; visibility: visible !important; opacity: 1 !important; position: relative; z-index: 1001; margin-right: 10px;">Add to Cart</button>
              <% } else { %>
                <button type="button" class="add-to-cart disabled-btn" disabled style="display: inline-block !important; visibility: visible !important; opacity: 1 !important; position: relative; z-index: 1001; margin-right: 10px;">Out of Stock</button>
              <% } %>
              <a href="/addWhishlist?productId=<%=product._id%>" class="btn btn-black py-3 px-5" style="display: inline-block !important; visibility: visible !important; opacity: 1 !important; position: relative; z-index: 1001;">Add to Wishlist</a>
              <!-- <a href="/cart" class="btn btn-primary py-3 px-5" style="display: inline-block !important; visibility: visible !important; opacity: 1 !important; position: relative; z-index: 1001;">Buy now</a> -->
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section ftco-no-pt ftco-no-pb">
      <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
          <div class="col-md-12 heading-section ftco-animate text-center">
            <h2 class="mb-4">Related Products</h2>
            <p>Explore more products similar to this one</p>
          </div>
        </div>
        <div class="row">
          <% if(relatedProducts && relatedProducts.length > 0) { %>
            <% relatedProducts.forEach(relatedProduct => { %>
              <div class="col-md-6 col-lg-3 ftco-animate">
                <div class="product">
                  <a href="/productDetaile?id=<%= relatedProduct._id %>" class="img-prod">
                    <img class="img-fluid" src="/uploads/product-images/<%= relatedProduct.productImage[0] %>" 
                         alt="<%= relatedProduct.productName %>">
                  </a>
                  <div class="text py-3 px-3">
                    <h3><a href="/productDetaile?id=<%= relatedProduct._id %>"><%= relatedProduct.productName %></a></h3>
                    <div class="d-flex">
                      <div class="pricing">
                        <p class="price">
                          <span class="mr-2 price-sale">₹<%= relatedProduct.salePrice %></span>
                        </p>
                      </div>
                    </div>
                    <hr>
                    <p class="bottom-area d-flex">
                      <a href="/cartAdd?productId=<%= relatedProduct._id %>" class="add-to-cart">
                        <span>Add to cart <i class="ion-ios-add ml-1"></i></span>
                      </a>
                    </p>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="col-md-12 text-center">
              <p>No related products found.</p>
            </div>
          <% } %>
        </div>
      </div>
    </section>

    <%- include("../partials/user/footer.ejs") %>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.easing.1.3.js"></script>
    <script src="/js/jquery.waypoints.min.js"></script>
    <script src="/js/jquery.stellar.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/aos.js"></script>
    <script src="/js/jquery.animateNumber.min.js"></script>
    <script src="/js/bootstrap-datepicker.js"></script>
    <script src="/js/scrollax.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    $(document).ready(function(){
        var quantitiy = 0;
        $('.quantity-right-plus').click(function(e){
            e.preventDefault();
            var quantity = parseInt($('#quantity').val());
            var max = parseInt($('#quantity').attr('max'));
            if(quantity < max){
                $('#quantity').val(quantity + 1);
            }
        });

        $('.quantity-left-minus').click(function(e){
            e.preventDefault();
            var quantity = parseInt($('#quantity').val());
            if(quantity > 1){
                $('#quantity').val(quantity - 1);
            }
        });

        $('.product-slider').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            items: 1,
            dots: true
        });

        $('.image-popup').magnificPopup({
            type: 'image',
            closeOnContentClick: true,
            mainClass: 'mfp-img-mobile',
            image: {
                verticalFit: true
            },
            zoom: {
                enabled: true,
                duration: 300,
                opener: function(element) {
                    return element.find('img');
                }
            }
        });

         function initializeZoom(container) {
            const img = container.querySelector('.zoom-image');
            const lens = container.querySelector('.zoom-lens');

            if (!img || !lens) return; 
            img.addEventListener('load', () => {
                const rect = container.getBoundingClientRect();
                const zoomFactor = 2.5;

                container.addEventListener('mousemove', (e) => {
                    const rect = container.getBoundingClientRect();
                    let posX = e.clientX - rect.left;
                    let posY = e.clientY - rect.top;

                    const lensWidth = lens.offsetWidth;
                    const lensHeight = lens.offsetHeight;
                    posX = Math.max(lensWidth / 2, Math.min(posX, rect.width - lensWidth / 2));
                    posY = Math.max(lensHeight / 2, Math.min(posY, rect.height - lensHeight / 2));

                    lens.style.left = `${posX - lensWidth / 2}px`;
                    lens.style.top = `${posY - lensHeight / 2}px`;

                    lens.style.backgroundImage = `url(${img.src})`;
                    lens.style.backgroundSize = `${img.width * zoomFactor}px ${img.height * zoomFactor}px`;
                    lens.style.backgroundPosition = `-${(posX * zoomFactor) - (lensWidth / 2)}px -${(posY * zoomFactor) - (lensHeight / 2)}px`;

                    lens.style.opacity = '1'; 
                });

                container.addEventListener('mouseleave', () => {
                    lens.style.opacity = '0';
                });
            });

             if (img.complete) {
                img.dispatchEvent(new Event('load'));
            }
        }

         document.querySelectorAll('.zoom-container').forEach(initializeZoom);

         $('.product-slider').on('changed.owl.carousel', function() {
            document.querySelectorAll('.zoom-container').forEach(initializeZoom);
        });

        $('#add-to-cart').click(function() {
            if ($(this).hasClass('disabled-btn')) return;

            const productId = $(this).data('product-id');
            const quantity = parseInt($('#quantity').val());
            const button = $(this);

            button.addClass('loading').text('Adding...');

            $.ajax({
                url: '/cartAdd',
                method: 'POST',
                data: { productId, quantity },
                success: function(response) {
                    button.removeClass('loading').text('Add to Cart');
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                        confirmButtonColor: '#3085d6'
                    }).then(() => {
                        window.location.href = response.redirect;
                    });
                },
                error: function(err) {
                    button.removeClass('loading').text('Add to Cart');
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: err.responseJSON.message,
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        });

        $('.btn-black[href^="/addWhishlist"]').click(function(e) {
            e.preventDefault();
            const href = $(this).attr('href');
            const button = $(this);

            button.text('Adding...').prop('disabled', true);

            $.ajax({
                url: href,
                method: 'GET',
                success: function(response) {
                    button.text('Add to Wishlist').prop('disabled', false);
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                        confirmButtonColor: '#3085d6'
                    }).then(() => {
                        window.location.href = response.redirect;
                    });
                },
                error: function(err) {
                    button.text('Add to Wishlist').prop('disabled', false);
                    Swal.fire({
                        icon: err.status === 400 ? 'warning' : 'error',
                        title: err.status === 400 ? 'Warning' : 'Error',
                        text: err.responseJSON.message,
                        confirmButtonColor: '#dc3545'
                    });
                }
            });
        });
    });
    </script>
  </body>
</html>