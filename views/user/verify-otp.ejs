<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .otp-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            width: 100%;
            max-width: 400px;
        }

        .otp-input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-align: center;
            font-size: 18px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .timer {
            margin-top: 15px;
            color: #666;
        }

        #resendLink {
            display: none; /* Initially hidden */
        }

        #resendLink.active {
            display: inline; /* Show when active */
        }
    </style>
</head>
<body>
    <div class="otp-card">
        <h2>OTP Verification</h2>
        <p>Enter the 6-digit code sent to your email</p>
        
        <input type="text" id="otpInput" class="otp-input" maxlength="6" placeholder="Enter OTP">
        <button id="verifyBtn" class="btn">Verify OTP</button>
        
        <div class="timer">
            <span id="timerText">Resend OTP in <span id="countdown">60</span> seconds</span>
            <br>
            <a href="#" id="resendLink" class="active">Resend OTP</a>
        </div>
    </div>

    <script>
        let countdown = 60;
        let timer;

        function startTimer() {
            clearInterval(timer);
            countdown = 60;
            $('#countdown').text(countdown);
            $('#timerText').show();
            $('#resendLink').removeClass('active'); 

            timer = setInterval(() => {
                countdown--;
                $('#countdown').text(countdown);
                
                if (countdown <= 0) {
                    clearInterval(timer);
                    $('#timerText').hide();
                    $('#resendLink').addClass('active'); 
                }
            }, 1000);
        }

        $(document).ready(function() {
            startTimer();

            $('#verifyBtn').click(function() {
                const otp = $('#otpInput').val();
                
                $.ajax({
                    url: '/verify-otp',
                    method: 'POST',
                    data: { otp: otp },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Verified!',
                                text: response.message,
                                timer: 1500
                            }).then(() => {
                                window.location.href = response.redirectUrl || '/';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Network Error',
                            text: 'Please try again'
                        });
                    }
                });
            });

            $('#resendLink').click(function(e) {
                e.preventDefault();
                if (!$(this).hasClass('active')) return; // Only work when visible
                
                $.ajax({
                    url: '/resend-otp',
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'OTP Resent',
                                text: response.message,
                                timer: 1500
                            });
                            startTimer(); //forrestart the   timer
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Network Error',
                            text: 'Could not resend OTP'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>