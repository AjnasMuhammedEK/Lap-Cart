<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4fƒçasf4;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .otp-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .otp-input {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            text-align: center;
        }

        .verify-btn {
            width: 100%;
            padding: 12px;
            background-color: #4a90e2;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 10px 0;
        }

        .verify-btn:hover {
            background-color: #3a7bc8;
        }

        .timer-text {
            color: #666;
            margin: 10px 0;
        }

        .resend-link {
            color: #4a90e2;
            text-decoration: none;
            display: none;
        }

        .resend-link.active {
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="otp-container">
        <h2>Verify OTP</h2>
        <p>Enter the 6-digit code sent to your email</p>
        <form id="otpForm">
            <input type="text" class="otp-input" id="otpInput" maxlength="6" placeholder="Enter OTP" required>
            <button type="submit" class="verify-btn">Verify OTP</button>
        </form>
        <div class="timer-text">
            Time remaining: <span id="timer">01:00</span>
            <br>
            <a href="#" class="resend-link" id="resendLink">Resend OTP</a>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            const $timer = $('#timer');
            const $resendLink = $('#resendLink');
            const $otpInput = $('#otpInput');
            const $form = $('#otpForm');
            let timeLeft = 60; // 60 seconds
            let timerId;

            function startTimer() {
                clearInterval(timerId);
                timeLeft = 60;
                $resendLink.removeClass('active');
                $otpInput.prop('disabled', false);
                $('.verify-btn').prop('disabled', false);

                timerId = setInterval(() => {
                    timeLeft--;
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    $timer.text(`${minutes}:${seconds < 10 ? '0' + seconds : seconds}`);

                    if (timeLeft <= 0) {
                        clearInterval(timerId);
                        $timer.text('00:00');
                        $resendLink.addClass('active');
                        $otpInput.prop('disabled', true);
                        $('.verify-btn').prop('disabled', true);
                        Swal.fire({
                            icon: 'warning',
                            title: 'OTP Expired',
                            text: 'The OTP has expired. Please request a new one.',
                        });
                    }
                }, 1000);
            }

            // Start timer on page load
            startTimer();

            // Handle OTP verification
            $form.on('submit', function(e) {
                e.preventDefault();
                const otp = $otpInput.val();

                if (timeLeft <= 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Expired',
                        text: 'OTP has expired. Please request a new one.',
                    });
                    return;
                }

                $.ajax({
                    url: '/verify-email-otp',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ otp }),
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Verified!',
                                text: 'OTP verified successfully',
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                window.location.href = '/new-email';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Invalid OTP',
                                text: response.message || 'The OTP you entered is incorrect',
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Something went wrong. Please try again.',
                        });
                    }
                });
            });

            // Handle OTP resend
            $resendLink.on('click', function(e) {
                e.preventDefault();
                
                if (timeLeft > 0) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Please Wait',
                        text: 'Wait until the current OTP expires',
                    });
                    return;
                }

                $.ajax({
                    url: '/emailReOtp',
                    method: 'POST',
                    contentType: 'application/json',
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'OTP Sent',
                                text: 'A new OTP has been sent to your email',
                                timer: 1500,
                                showConfirmButton: false
                            });
                            $otpInput.val('');
                            startTimer();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message || 'Failed to send new OTP',
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Something went wrong while resending OTP',
                        });
                    }
                });
            });

            $otpInput.focus();
        });
    </script>
</body>
</html>