<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .otp-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            width: 100%;
            max-width: 400px;
        }

        .otp-input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-align: center;
            font-size: 18px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .timer {
            margin-top: 15px;
            color: #666;
        }

        #resendLink {
            display: none; /* Initially hidden */
        }

        #resendLink.active {
            display: inline; /* Show when active */
        }
    </style>
</head>
<body>
    <div class="otp-card">
        <h2>OTP Verification</h2>
        <p>Enter the 6-digit code sent to your email</p>
        <form action="/verify-email-otp" method="post">
            <input type="text" id="otpInput" name="otp" class="otp-input" maxlength="6" placeholder="Enter OTP">
            <button id="verifyBtn" class="btn">Verify OTP</button>
        </form>
        
        <div class="timer">
            <span id="timerText">Resend OTP in <span id="countdown">60</span> seconds</span>
            <br>
            <a href="/forPassReOtp" id="resendLink">Resend OTP</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
    const countdownElement = document.getElementById('countdown');
    const timerTextElement = document.getElementById('timerText');
    const resendLink = document.getElementById('resendLink');
    const otpInput = document.getElementById('otpInput');
    
    let endTime = sessionStorage.getItem('otpEndTime');
    let countdownTimer;

    // Initialize timer if not set or expired
    if (!endTime || new Date().getTime() > parseInt(endTime)) {
        endTime = new Date().getTime() + (60 * 1000); // 60 seconds from now
        sessionStorage.setItem('otpEndTime', endTime);
    }

    function updateTimer() {
        const currentTime = new Date().getTime();
        const timeLeft = Math.max(0, Math.floor((parseInt(endTime) - currentTime) / 1000));
        
        countdownElement.textContent = timeLeft;
        
        if (timeLeft <= 0) {
            clearInterval(countdownTimer);
            timerTextElement.style.display = 'none';
            resendLink.classList.add('active');
        }
    }

    // Start timer function
    function startTimer() {
        resendLink.classList.remove('active');
        timerTextElement.style.display = 'block';
        updateTimer();
        countdownTimer = setInterval(updateTimer, 1000);
    }

    // Initial start
    startTimer();

    // Resend link handler
    resendLink.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Make AJAX call to resend OTP
        fetch('/forPassReOtp', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email: sessionStorage.getItem('userEmail') })
        })
        .then(response => response.json())
        .then(data => {
            if(data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: 'OTP has been resent to your email',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
                
                // Reset timer
                clearInterval(countdownTimer);
                endTime = new Date().getTime() + (60 * 1000);
                sessionStorage.setItem('otpEndTime', endTime);
                startTimer();
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: 'Failed to resend OTP. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                title: 'Error!',
                text: 'Something went wrong. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        });
    });

    otpInput.focus();
});
    </script>
</body>
</html>