<!DOCTYPE html>
<html>
  <head>
    <title>Invoice</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        font-size: 12px;
        color: #333;
      }
      .invoice-container {
        width: 210mm;  
        min-height: 297mm;  
        padding: 10mm;
        box-sizing: border-box;
        background-color: #ffffff;
        margin: 0 auto;
        border: 1px solid #ddd;
        position: relative;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        margin-bottom: 15px;
      }
      .header h1 {
        font-size: 28px;
        margin: 0;
        color: #007bff;
        text-transform: uppercase;
      }
      .header .company-info {
        text-align: right;
        font-size: 11px;
        color: #555;
      }
      .header .company-info p {
        margin: 2px 0;
      }
      .bill-to {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
      }
      .bill-to .customer-details,
      .bill-to .invoice-details {
        width: 48%;
      }
      .bill-to .customer-details {
        text-align: left;
      }
      .bill-to .invoice-details {
        text-align: right;
      }
      .bill-to p {
        margin: 2px 0;
        font-size: 12px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 15px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
        box-sizing: border-box;
      }
      th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
      }
      th:nth-child(1),
      td:nth-child(1) {
        width: 40%;
        text-align: left;
      }
      th:nth-child(2),
      td:nth-child(2) {
        width: 20%;
      }
      th:nth-child(3),
      td:nth-child(3) {
        width: 20%;
      }
      th:nth-child(4),
      td:nth-child(4) {
        width: 20%;
        text-align: right;
      }
      td img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        display: block;
        margin: 0 auto;
      }
      tbody tr:nth-child(even) {
        background-color: #f9f9f9;
      }
      .totals {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 15px;
      }
      .totals tr {
        background-color: #007bff;
        color: white;
        font-weight: bold;
      }
      .totals td {
        padding: 10px;
        border: 1px solid #ddd;
      }
      .totals .label {
        width: 50%;
        text-align: left;
      }
      .totals .amount {
        width: 50%;
        text-align: right;
      }
      .footer {
        text-align: center;
        font-size: 10px;
        color: #777;
        border-top: 1px solid #ddd;
        padding-top: 10px;
        position: absolute;
        bottom: 10mm;
        width: calc(100% - 20mm);
      }
      .btn-download {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin: 20px auto;
        display: block;
      }
      .btn-download:hover {
        background-color: #45a049;
      }
      @media print {
        body {
          margin: 0;
          padding: 0;
        }
        .invoice-container {
          width: 210mm;
          min-height: 297mm;
          padding: 10mm;
          box-sizing: border-box;
          margin: 0;
          border: none;
        }
        .btn-download {
          display: none;
        }
        table tr {
          page-break-inside: avoid;
        }
        .footer {
          position: absolute;
          bottom: 10mm;
        }
      }
    </style>
  </head>
  <body>
    <button class="btn-download">Download PDF</button>

    <div class="invoice-container">
      <div class="main-content">
        <div class="header">
          <h1>INVOICE</h1>
          <div class="company-info">
            <p>Home Furnishings</p>
            <p>123 Main Street, Auckland 1010, New Zealand</p>
            <p>Email: info@homefurnishings.co.nz</p>
          </div>
        </div>

        <div class="bill-to">
          <div class="customer-details">
            <p><strong>Bill To:</strong></p>
            <p>Name: <%= orderData.address.name %></p>
            <p>Place: <%= orderData.address.city %></p>
            <p>State: <%= orderData.address.state %></p>
            <p>Pin code: <%= orderData.address.pincode %></p>
          </div>
          <div class="invoice-details">
            <p><strong>Invoice Number:</strong> <%= invoiceNumber %></p>
            <p><strong>Date:</strong> <%= orderDate %></p>
          </div>
        </div>

        <table>
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Image</th>
              <th>Quantity</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% orderData.orderedItems.forEach(data => { %>
            <tr>
              <td><%= data.product.productName %></td>
              <td>
                <img
                  src="<%= data.product.productImage[0] %>"
                  alt="Product Image"
                  onerror="this.src='https://via.placeholder.com/60';"
                />
              </td>
              <td><%= data.orderQuantity %></td>
              <td><%= data.price.toFixed(2) %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <table class="totals">
          <tr>
            <td class="label">TOTAL DUE:</td>
            <td class="amount">$<%= orderData.finalAmount.toFixed(2) %></td>
          </tr>
        </table>
      </div>

      <div class="footer">
        <p>Home Furnishings | 123 Main Street, Auckland 1010, New Zealand | Email: info@homefurnishings.co.nz</p>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        async function downloadInvoice() {
          const element = document.querySelector(".invoice-container");
          if (!element) {
            console.error("Invoice container not found!");
            return;
          }

          const downloadButton = document.querySelector(".btn-download");
          if (downloadButton) downloadButton.style.display = "none";

          // Preload images to avoid CORS or loading issues
          const images = element.querySelectorAll("img");
          const imagePromises = Array.from(images).map((img) => {
            return new Promise((resolve) => {
              if (img.complete) {
                resolve();
              } else {
                img.onload = resolve;
                img.onerror = () => {
                  img.src = "https://via.placeholder.com/60";
                  resolve();
                };
              }
            });
          });

          await Promise.all(imagePromises);

          // Ensure A4 dimensions (210mm x 297mm)
          element.style.width = "210mm";
          element.style.minHeight = "297mm";
          element.style.padding = "10mm";
          element.style.boxSizing = "border-box";
          element.style.backgroundColor = "#ffffff";

          const filename = `invoice_<%= invoiceNumber %>.pdf`;

          const opt = {
            margin: [10, 10, 10, 10], // Top, Right, Bottom, Left (in mm)
            filename: filename,
            image: { type: "jpeg", quality: 0.98 },
            html2canvas: {
              scale: 2,
              useCORS: true,
              logging: false,
              width: 794, // A4 width in pixels at 96 DPI
              height: 1123, // A4 height in pixels at 96 DPI
              scrollX: 0,
              scrollY: 0,
              backgroundColor: "#ffffff",
            },
            jsPDF: {
              unit: "mm",
              format: "a4",
              orientation: "portrait",
              compress: true,
            },
            pagebreak: { mode: ["css", "legacy"], avoid: ["tr", ".totals"] },
          };

          try {
            await html2pdf()
              .set(opt)
              .from(element)
              .save();
          } catch (error) {
            console.error("Error generating PDF:", error);
          } finally {
            if (downloadButton) downloadButton.style.display = "block";
          }
        }

        document
          .querySelector(".btn-download")
          .addEventListener("click", downloadInvoice);
      });
    </script>
  </body>
</html>