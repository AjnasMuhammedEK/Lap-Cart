<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Your New Password - LAP CART</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }
        
        body {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .container {
            display: flex;
            max-width: 800px;
            width: 100%;
            height: 500px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            overflow: hidden;
        }
        
        .left-panel {
            flex: 1;
            background-color: #000;
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        
        .right-panel {
            flex: 1;
            background-color: #fff;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        h1 {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: bold;
        }
        
        p {
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 30px;
        }
        
        .logo {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .logo img {
            width: 50px;
            height: auto;
            margin-right: 10px;
        }
        
        .logo-text {
            font-size: 28px;
            font-weight: bold;
        }
        
        .red-text {
            color: #ff0000;
        }
        
        .white-text {
            color: #ffffff;
        }
        
        .input-group {
            margin-bottom: 25px;
        }
        
        .input-group label {
            display: block;
            margin-bottom: 8px;
            font-size: 16px;
            font-weight: bold;
        }
        
        .input-group input {
            width: 100%;
            padding: 12px 0;
            border: none;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
            outline: none;
            transition: border-color 0.3s;
        }
        
        .input-group input:focus {
            border-bottom-color: #4285f4;
        }
        
        .submit-btn {
            background-color: #4285f4;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 14px 0;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s;
            margin-top: 20px;
        }
        
        .submit-btn:hover {
            background-color: #3367d6;
        }
        
        @media screen and (max-width: 768px) {
            .container {
                flex-direction: column;
                height: auto;
            }
            
            .left-panel, .right-panel {
                width: 100%;
                padding: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <h1>Create Your New Password</h1>
            <p>Set a strong password to keep your account secure. Once done, you'll be ready to continue shopping with ease!</p>
            <div class="logo">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                    <path d="M30 10H10C8.89543 10 8 10.8954 8 12V28C8 29.1046 8.89543 30 10 30H30C31.1046 30 32 29.1046 32 28V12C32 10.8954 31.1046 10 30 10Z" stroke="white" stroke-width="2"/>
                    <path d="M8 15H32" stroke="white" stroke-width="2"/>
                    <path d="M13 20L27 20" stroke="white" stroke-width="2"/>
                    <path d="M13 25L23 25" stroke="white" stroke-width="2"/>
                    <path d="M32 15L36 10V30L32 25" stroke="white" stroke-width="2"/>
                </svg>
                <div class="logo-text">
                    <span class="red-text">LAP</span><span class="white-text"> CART</span>
                </div>
            </div>
        </div>
        
        <div class="right-panel">
            <p>Set a strong password to keep your account secure. Once done, you'll be ready to continue shopping with ease!</p>
            <h1>Enter Your New Password</h1>
            
            <form action="/forgotPassword" method='post' onsubmit="return passValidChecking()">
                <div class="input-group">
                    <input type="password" id="new-password" name="newPassword" placeholder="New Password" >
                    <div id="error4" class="error-message"></div>

                </div>
                
                <div class="input-group">
                    <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirmation Password" >
                    <div id="error5" class="error-message"></div>

                </div>
                
                <button type="submit" class="submit-btn">SUBMIT</button>
            </form>
        </div>
    </div>

    <input type="text" name="" id="msg" value="<%=message%>" hidden>

    <script>

        let successMsg = document.getElementById('msg').value
       
        if (successMsg) {
            Swal.fire({
                text: successMsg, 
                icon: 'success',  
                title: 'Success'  
            });
        }

        
    function passValidChecking() {
        const passid = document.getElementById("new-password");
        const cpassid = document.getElementById("confirm-password");
        const passval = passid.value.trim();
        const cpassval = cpassid.value.trim();
        const error4 = document.getElementById("error4");
        const error5 = document.getElementById("error5");

        error4.innerHTML = ""; // Clear previous errors
        error5.innerHTML = ""; // Clear previous errors

        const alpha = /[a-zA-Z]/;
        const digit = /\d/;
        let isValid = true;

        if (passval.length < 8) {
            error4.innerHTML = "Password must be at least 8 characters.";
            isValid = false;
        } else if (!alpha.test(passval) || !digit.test(passval)) {
            error4.innerHTML = "Password must contain letters and numbers.";
            isValid = false;
        }

        if (passval !== cpassval) {
            error5.innerHTML = "Passwords do not match.";
            isValid = false;
        }

        return isValid; 
    }

       
    </script>
</body>
</html>