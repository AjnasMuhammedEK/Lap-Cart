     <div class="modal" tabindex="-1" id="editAddressModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Edit Address</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form onsubmit="return ValidEditChecking()" action="/checkeditAddress" method="post" class="add-addr-form" id="editAddressForm">
                    <input type="hidden" name="addressId" id="editAdd">
                    <div class="add-addr-type-section">
                        <label class="add-addr-label" for="addressType">Address Type</label>
                        <select class="add-addr-select" id="addressType" name="addressType" >
                            <option value="">Select Address Type</option>
                            <option value="Home">Home</option>
                            <option value="Work">Work</option>
                            <option value="Other">Other</option>
                        </select>
                        <div id="error1" class="error-message"></div>
                    </div>
                    <div class="add-addr-field-group">
                        <label class="add-addr-label" for="name">Full Name</label>
                        <input class="add-addr-input" type="text" id="name" name="name" >
                        <div id="error2" class="error-message"></div>
                    </div>
                    
                    <div class="add-addr-field-group">
                        <label class="add-addr-label" for="city">City</label>
                        <input class="add-addr-input" type="text" id="city" name="city" >
                        <div id="error3" class="error-message"></div>
                    </div>
                    
                    <div class="add-addr-field-group">
                        <label class="add-addr-label" for="landMark">Landmark</label>
                        <input class="add-addr-input" type="text" id="landMark" name="landMark" >
                        <div id="error4" class="error-message"></div>
                    </div>
                    
                    <div class="add-addr-field-group">
                        <label class="add-addr-label" for="state">State</label>
                        <input class="add-addr-input" type="text" id="state" name="state" >
                        <div id="error5" class="error-message"></div>
                    </div>
                    
                    <div class="add-addr-field-group">
                        <label class="add-addr-label" for="pincode">Pincode</label>
                        <input class="add-addr-input" type="number" id="pincode" name="pincode" >
                        <div id="error6" class="error-message"></div>
                    </div>
                    
                    <div class="add-addr-field-group">
                        <label class="add-addr-label" for="phone">Phone Number</label>
                        <input class="add-addr-input" type="number" id="phone" name="phone" >
                        <div id="error7" class="error-message"></div>
                    </div>
                    
                    <button class="btn btn-primary">Edit Address</button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    <script>
        function addAddress(){
            let addModalShow = new bootstrap.Modal(document.getElementById('addAdrressModal'));
            addModalShow.show();
        }

        function editAddress(addId) {
            let editModalShow = new bootstrap.Modal(document.getElementById('editAddressModal'));
            editModalShow.show();
            document.getElementById('editAdd').value = addId;
        }

         document.querySelectorAll('.payment-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.payment-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                this.classList.add('selected');
                this.querySelector('input[type="radio"]').checked = true;
            });
        });

         document.querySelector('.continue-btn').addEventListener('click', async () => {
            const selectedAddress = document.querySelector('input[name="address"]:checked');
            const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
            
            if (!selectedAddress || !selectedPayment) {
                alert('Please select an address and payment method');
                return;
            }

            try {
                const response = await fetch('/place-order', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        selectedAddressId: selectedAddress.parentElement.dataset.id,
                        paymentMethod: selectedPayment.value
                    })
                });

                const data = await response.json();
                if (data.redirect) {
                    window.location.href = data.redirect;
                }
            } catch (error) {
                console.error('Error placing order:', error);
                alert('Failed to place order');
            }
        });

        function ValidChecking() {
            let isValid = true;
            
            const addressType = document.getElementById("addressType");
            if (!addressType.value) {
                document.getElementById("error1").style.display = "block";
                document.getElementById("error1").innerHTML = "Please select an address type.";
                isValid = false;
            } else {
                document.getElementById("error1").style.display = "none";
            }
            
            const nameVal = document.getElementById("name").value.trim();
            const namePattern = /^[A-Za-z\s]+$/;
            
            if (!nameVal) {
                document.getElementById("error2").style.display = "block";
                document.getElementById("error2").innerHTML = "Please enter a valid name.";
                isValid = false;
            } else if (!namePattern.test(nameVal)) {
                document.getElementById("error2").style.display = "block";
                document.getElementById("error2").innerHTML = "Name can only contain alphabets and spaces.";
                isValid = false;
            } else {
                document.getElementById("error2").style.display = "none";
            }
            
            const cityVal = document.getElementById("city").value.trim();
            if (!cityVal) {
                document.getElementById("error3").style.display = "block";
                document.getElementById("error3").innerHTML = "Enter your city.";
                isValid = false;
            } else {
                document.getElementById("error3").style.display = "none";
            }
            
            const landmarkVal = document.getElementById("landMark").value.trim();
            if (!landmarkVal) {
                document.getElementById("error4").style.display = "block";
                document.getElementById("error4").innerHTML = "Enter your landmark.";
                isValid = false;
            } else {
                document.getElementById("error4").style.display = "none";
            }
            
            const stateVal = document.getElementById("state").value.trim();
            if (!stateVal) {
                document.getElementById("error5").style.display = "block";
                document.getElementById("error5").innerHTML = "Enter your state.";
                isValid = false;
            } else {
                document.getElementById("error5").style.display = "none";
            }
            
            const pincodeVal = document.getElementById("pincode").value.trim();
            if (!pincodeVal || pincodeVal.length !== 6 || isNaN(pincodeVal)) {
                document.getElementById("error6").style.display = "block";
                document.getElementById("error6").innerHTML = "Enter a valid 6-digit pincode.";
                isValid = false;
            } else {
                document.getElementById("error6").style.display = "none";
            }
            
            const phoneVal = document.getElementById("phone").value.trim();
            if (!phoneVal || phoneVal.length !== 10 || isNaN(phoneVal)) {
                document.getElementById("error7").style.display = "block";
                document.getElementById("error7").innerHTML = "Phone number must be exactly 10 digits.";
                isValid = false;
            } else {
                document.getElementById("error7").style.display = "none";
            }
            
            return isValid;
        }

        function ValidEditChecking() {
            let isValid = true;
            
            const editModal = document.getElementById('editAddressModal');
            const addressType = editModal.querySelector('#addressType');
            const name = editModal.querySelector('#name');
            const city = editModal.querySelector('#city');
            const landMark = editModal.querySelector('#landMark');
            const state = editModal.querySelector('#state');
            const pincode = editModal.querySelector('#pincode');
            const phone = editModal.querySelector('#phone');
            
            const error1 = editModal.querySelector('#error1');
            const error2 = editModal.querySelector('#error2');
            const error3 = editModal.querySelector('#error3');
            const error4 = editModal.querySelector('#error4');
            const error5 = editModal.querySelector('#error5');
            const error6 = editModal.querySelector('#error6');
            const error7 = editModal.querySelector('#error7');

            if (!addressType.value) {
                error1.style.display = "block";
                error1.innerHTML = "Please select an address type.";
                isValid = false;
            } else {
                error1.style.display = "none";
            }

            const nameVal = name.value.trim();
            const namePattern = /^[A-Za-z\s]+$/;
            if (!nameVal) {
                error2.style.display = "block";
                error2.innerHTML = "Please enter a valid name.";
                isValid = false;
            } else if (!namePattern.test(nameVal)) {
                error2.style.display = "block";
                error2.innerHTML = "Name can only contain alphabets and spaces.";
                isValid = false;
            } else {
                error2.style.display = "none";
            }

            const cityVal = city.value.trim();
            if (!cityVal) {
                error3.style.display = "block";
                error3.innerHTML = "Enter your city.";
                isValid = false;
            } else {
                error3.style.display = "none";
            }

            const landmarkVal = landMark.value.trim();
            if (!landmarkVal) {
                error4.style.display = "block";
                error4.innerHTML = "Enter your landmark.";
                isValid = false;
            } else {
                error4.style.display = "none";
            }

            const stateVal = state.value.trim();
            if (!stateVal) {
                error5.style.display = "block";
                error5.innerHTML = "Enter your state.";
                isValid = false;
            } else {
                error5.style.display = "none";
            }

            const pincodeVal = pincode.value.trim();
            if (!pincodeVal || pincodeVal.length !== 6 || isNaN(pincodeVal)) {
                error6.style.display = "block";
                error6.innerHTML = "Enter a valid 6-digit pincode.";
                isValid = false;
            } else {
                error6.style.display = "none";
            }

            const phoneVal = phone.value.trim();
            if (!phoneVal || phoneVal.length !== 10 || isNaN(phoneVal)) {
                error7.style.display = "block";
                error7.innerHTML = "Phone number must be exactly 10 digits.";
                isValid = false;
            } else {
                error7.style.display = "none";
            }

            return isValid;
        }
